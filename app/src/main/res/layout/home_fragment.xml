<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_fragment">


    <Button
        android:id="@+id/button_manage_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Manage team"
        android:textSize="20dp"
        android:textAlignment="center"

        android:layout_gravity="center"
        android:backgroundTint="@android:color/darker_gray"
        android:textColor="@android:color/white"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"

        android:layout_weight="1"
        android:padding="5dp"/>




<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="horizontal"
    android:id="@+id/home_fragment_buttons"
    android:layout_below="@+id/button_manage_team">

<Button
    android:id="@+id/button_home_month"

    android:backgroundTint="@android:color/transparent"

    android:layout_width="0dp"
    android:layout_weight="1"
    android:padding="0dp"
    android:scaleType="fitCenter"
    android:layout_height="30sp"
    android:layout_alignParentTop="true"
    android:text="Month"
    android:textSize="20sp"
    android:textColor="@color/black"/>

    <Button
        android:id="@+id/button_home_year"
        android:backgroundTint="@android:color/transparent"
        android:textColor="@android:color/black"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:padding="0dp"

        android:scaleType="fitCenter"
        android:layout_height="30sp"
        android:layout_alignParentTop="true"
        android:text="Year"
        android:textSize="20sp"/>
</LinearLayout>







    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:id="@+id/home_parameters"
        android:layout_below="@+id/home_fragment_buttons"
        android:padding="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <TextView
            android:id="@+id/earnings"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:layout_height="wrap_content"
            android:text="Earnings"
            android:textSize="20sp"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/total_task"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:layout_height="wrap_content"
            android:text="Total Task"
            android:textSize="20sp"

            android:textAlignment="center"/>
        <TextView
            android:id="@+id/pass"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:layout_height="wrap_content"
            android:text="Pass"
            android:textSize="20sp"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/fails"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:layout_height="wrap_content"
            android:text="Fails"
            android:textSize="20sp"
            android:textAlignment="center"/>
    </LinearLayout>












    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:id="@+id/home_values"
    android:layout_below="@+id/home_parameters"
    android:padding="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

    <TextView
        android:id="@+id/earnings_value"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:padding="0dp"
        android:layout_height="wrap_content"
        android:text="25k"
        android:textSize="20sp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/total_task_value"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:padding="0dp"
        android:layout_height="wrap_content"
        android:text="15"
        android:textSize="20sp"

        android:textAlignment="center"/>
    <TextView
        android:id="@+id/pass_value"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:padding="0dp"
        android:layout_height="wrap_content"
        android:text="12"
        android:textSize="20sp"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/fails_value"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:padding="0dp"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="20sp"
        android:textAlignment="center"/>
</LinearLayout>



    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:layout_below="@+id/home_values"

        android:paddingHorizontal="16dp"
        android:id="@+id/home_add_buttons">

        <TableRow>
            <Button
                android:id="@+id/add_new_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add New Task"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/add_new_team_lead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add New Team Lead"
                android:layout_margin="5dp"/>
        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/add_new_client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add New Client"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/add_new_writer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add New Writer"
                android:layout_margin="5dp"/>
        </TableRow>
    </TableLayout>




    <LinearLayout
        android:orientation="vertical"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/home_3_scroll_view"


        android:layout_below="@+id/home_add_buttons"
        android:layout_alignParentBottom="true"

        android:backgroundTint="@android:color/background_dark">








            <!-- Inner Layout (Only One Child) -->
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/urgent_note_linear_layout"
                android:orientation="vertical"
                android:backgroundTint="@android:color/holo_purple"
                android:layout_margin="16dp"
                android:layout_weight="1"

                android:fillViewport="true">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/urgent_note_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp"
                    tools:listitem="@layout/item_view" />


            </LinearLayout>









        <!-- Inner Layout (Only One Child) -->
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/priority_payment_linear_layout"
            android:orientation="vertical"
            android:backgroundTint="@android:color/holo_purple"
            android:layout_margin="16dp"
            android:layout_weight="1"

            android:fillViewport="true">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/priority_payment_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                tools:listitem="@layout/item_view" />


        </LinearLayout>



        <!-- Inner Layout (Only One Child) -->
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/client_name_linear_layout"
            android:orientation="vertical"
            android:backgroundTint="@android:color/holo_purple"
            android:layout_margin="16dp"
            android:layout_weight="1"

            android:fillViewport="true">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/client_name_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                tools:listitem="@layout/item_view" />


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>