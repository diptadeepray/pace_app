<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:id="@+id/reports_fragment">






    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:gravity="center">

        <!-- Row 1 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/button_task_report"
                android:backgroundTint="@android:color/transparent"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/task_report"
                android:text="Task Report"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="0dp"
                android:scaleType="fitCenter"/>

            <Button
                android:id="@+id/button_failed"
                android:backgroundTint="@android:color/transparent"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/failed"
                android:text="Fail/bad Report"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="0dp"
                android:scaleType="fitCenter"/>

        </TableRow>

        <!-- Row 2 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/pending_task"
                android:backgroundTint="@android:color/transparent"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/pending_task"
                android:text="Pending Task"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="0dp"
                android:scaleType="fitCenter"/>




            <Button
                android:id="@+id/add_new_task"
                android:backgroundTint="@android:color/transparent"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/new_task"
                android:text="Add New Task"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="0dp"
                android:scaleType="fitCenter"/>

        </TableRow>




        <!-- Row 4 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/view_fill_course"
                android:backgroundTint="@android:color/transparent"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/full_course"
                android:text="View Full Course"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="0dp"
                android:scaleType="fitCenter"/>

        </TableRow>


    </TableLayout>






</RelativeLayout>